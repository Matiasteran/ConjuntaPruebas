@model IEnumerable<TDD.Data.Cliente>

@{
    ViewData["Title"] = "Index";
    int rowNumber = 1; // Inicializamos un contador para las filas
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

</head>

<body>
    <div class="container mt-4" id="clientes-container">
        <h1 class="text-center mb-4">Clientes</h1>
        <p class="text-center">
            <a asp-action="Create" class="btn btn-primary" id="btn-crear-cliente">
                <i class="bi bi-person-plus"></i> Crear Nuevo
            </a>
        </p>

        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="tabla-clientes">
                <caption>Lista de Clientes</caption>
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Cédula</th>
                        <th>Apellidos</th>
                        <th>Nombres</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="cliente-@rowNumber">
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                            <td class="text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Mail)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td class="text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>
                                <div class="btn-group-custom">
                                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Codigo" id="btn-editar-@rowNumber">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Codigo" id="btn-detalles-@rowNumber">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Codigo" id="btn-eliminar-@rowNumber">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                        rowNumber++; // Incrementamos el contador de filas
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>