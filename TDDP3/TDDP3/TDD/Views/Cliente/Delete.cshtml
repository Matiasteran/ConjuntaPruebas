@model TDD.Data.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap Icons (opcional) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #dc3545;
        }

        h4 {
            text-align: center;
            color: #6c757d;
        }

        .details {
            margin-top: 20px;
        }

            .details dt {
                font-weight: bold;
                color: #333;
            }

            .details dd {
                margin-bottom: 10px;
            }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-danger, .btn-secondary {
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>

<body id="body">
    <div class="container" id="container">
        <h1 id="title"><i class="bi bi-trash"></i> Eliminar Cliente</h1>
        <h4 id="subtitle">¿Estás seguro de que quieres eliminar este cliente?</h4>
        <hr id="separator" />

        <dl class="details" id="details">
            <dt id="label-codigo">Código:</dt>
            <dd id="codigo">@Html.DisplayFor(model => model.Codigo)</dd>

            <dt id="label-cedula">Cédula:</dt>
            <dd id="cedula">@Html.DisplayFor(model => model.Cedula)</dd>

            <dt id="label-apellidos">Apellidos:</dt>
            <dd id="apellidos">@Html.DisplayFor(model => model.Apellidos)</dd>

            <dt id="label-nombres">Nombres:</dt>
            <dd id="nombres">@Html.DisplayFor(model => model.Nombres)</dd>

            <dt id="label-fecha-nacimiento">Fecha de Nacimiento:</dt>
            <dd id="fecha-nacimiento">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt id="label-mail">Correo:</dt>
            <dd id="mail">@Html.DisplayFor(model => model.Mail)</dd>

            <dt id="label-telefono">Teléfono:</dt>
            <dd id="telefono">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt id="label-direccion">Dirección:</dt>
            <dd id="direccion">@Html.DisplayFor(model => model.Direccion)</dd>

            <dt id="label-estado">Estado:</dt>
            <dd id="estado">@Html.DisplayFor(model => model.Estado)</dd>
        </dl>

        <div class="buttons" id="buttons">
            <form asp-action="Delete" id="delete-form">
                <button type="submit" class="btn-danger" id="delete-button">
                    <i class="bi bi-trash3-fill"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn-secondary" id="back-button">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</body>